Function groupEmpty(_group)
	tGroup.group = ConvertToType(_group)
	For i = 0 To maxGroupEntites
		PokeInt tGroup\entities, i, 0
	Next i
EndFunction

Function groupActivate(_group)
	tGroup.group = ConvertToType(_group)
	tGroup\isActivated = True
	tGroup\speed = 999
